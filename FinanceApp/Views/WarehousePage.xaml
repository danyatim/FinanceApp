<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FinanceApp.ViewModels"
             xmlns:models="clr-namespace:FinanceApp.Models"
             x:Class="FinanceApp.Views.WarehousePage"
             Shell.NavBarIsVisible="False"
             x:DataType="vm:WarehouseViewModel">
    <ContentPage.Background>
        <!--Градиент заднего фона-->
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#B3DDF1" Offset="0.0" />
            <GradientStop Color="#76C8F6" Offset="0.5" />
            <GradientStop Color="#B3DDF1" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="16" Spacing="8">
        <Button Text="Добавить товар" Command="{Binding AddProductCommand}" Style="{StaticResource GreenButtonStyle}" />

        <Grid ColumnDefinitions="1*,1*,1*,1*,1*,1*,1*,1*,1*" ColumnSpacing="8">
            <Label Text="Наименование" Style="{StaticResource ListHeaderStyle}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleSortCommand}" CommandParameter="Name" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="1" Text="Остаток" Style="{StaticResource ListHeaderStyle}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleSortCommand}" CommandParameter="Quantity" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="2" Text="Цена продажи" Style="{StaticResource ListHeaderStyle}"/>
            <Label Grid.Column="3" Text="Комиссия %" Style="{StaticResource ListHeaderStyle}"/>
            <Label Grid.Column="4" Text="Закупка" Style="{StaticResource ListHeaderStyle}"/>
            <Label Grid.Column="5" Text="Доставка" Style="{StaticResource ListHeaderStyle}"/>
            <Label Grid.Column="6" Text="Мин. цена" Style="{StaticResource ListHeaderStyle}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleSortCommand}" CommandParameter="MinSellPrice" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="7" Text="Рекоменд." Style="{StaticResource ListHeaderStyle}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleSortCommand}" CommandParameter="RecommendedPrice" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="8" Text="Сохранить" Style="{StaticResource ListHeaderStyle}"/>
        </Grid>

        <CollectionView ItemsSource="{Binding Products}" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Product" xmlns:models="clr-namespace:FinanceApp.Models">
                    <Grid ColumnDefinitions="1*,1*,1*,1*,1*,1*,1*,1*,1*" ColumnSpacing="8">
                        <Entry Text="{Binding Name}" />
                        <Entry Grid.Column="1" Text="{Binding Quantity}" Keyboard="Numeric" HorizontalOptions="Center"/>
                        <Entry Grid.Column="2" Text="{Binding SellPrice}" Keyboard="Numeric" HorizontalOptions="Center"/>
                        <Entry Grid.Column="3" Text="{Binding FeePercent}" Keyboard="Numeric" HorizontalOptions="Center"/>
                        <Entry Grid.Column="4" Text="{Binding BuyPrice}" Keyboard="Numeric" HorizontalOptions="Center"/>
                        <Entry Grid.Column="5" Text="{Binding DeliveryPrice}" Keyboard="Numeric" HorizontalOptions="Center"/>
                        <Label Grid.Column="6" Text="{Binding MinSellPrice, StringFormat='{0:C2}'}" Style="{StaticResource TransactionListNumbersStyle}" HorizontalOptions="Center" VerticalTextAlignment="Center"/>
                        <Label Grid.Column="7" Text="{Binding RecommendedPrice, StringFormat='{0:C2}'}" Style="{StaticResource TransactionListNumbersStyle}" HorizontalOptions="Center" VerticalTextAlignment="Center"/>
                        <Button Grid.Column="8" Text="💾" Style="{StaticResource GreenButtonStyle}" 
                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WarehouseViewModel}}, Path=SaveInlineCommand}"
                    CommandParameter="{Binding .}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>